{% extends "::layout/layout.html.twig" %}
{% block body %}




<div id="main">
    <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <h2 id="Bvn">Bienvenue !</h2>
    </div>

    <div id="myCarousel" class="carousel slide col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-8 col-sm-8 col-md-8 col-lg-8" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    {% for image in images %}
            <li data-target="#myCarousel" data-slide-to="{{ image.ordre }}"></li>
    {% endfor %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner ">
            <div class="item active">
                <img class="ImageCarousel d-block img-fluid" src="{{  asset(active.media.path) }}" alt="Los Angeles">
            </div>
            {% for image in images %}
            <div class="item">
                <img class="ImageCarousel d-block img-fluid" src="{{ asset(image.media.path) }}" alt="Los Angeles">

            </div>
                {% endfor %}
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7"  style="text-align: right">
        {% for entreprise in entreprises %}
            <div id="DivHomePage" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <h3 id="MotHomePage" > {{ entreprise.nom }} ? </h3>
                <div id="DescriptionHomePage" >
                    {{ entreprise.description }}
                </div>
            </div>

        {% endfor %}
    </div>


</div>

{% endblock %}