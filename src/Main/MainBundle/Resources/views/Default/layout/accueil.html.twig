{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div id="main">
        <!--        Caroussel      -->
        <div id="myCarousel" class="carousel slide col-xs-12 col-sm-12 col-md-12 col-lg-12 test7" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                {% for image in images %}
                    <li data-target="#myCarousel" data-slide-to="{{ image.ordre }}"></li>
                {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner centrageD">
                <div class="item active" style="width: 100%;">
                    <img class="ImageCarousel d-block img-fluid" src="{{  asset(active.media.path) }}" alt="Los Angeles">
                </div>
                {% for image in images %}
                    <div class="item" style="width: 100%;">
                        <img class="ImageCarousel d-block img-fluid" src="{{ asset(image.media.path) }}" alt="Los Angeles">
                    </div>
                {% endfor %}
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!--        !Caroussel!      -->

        <!--        Barre bienvenue      -->
        <div id="DivBvn" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0px">
            <h2 id="Bvn">Bienvenue !</h2>
        </div>
        <!--        !Barre bienvenue!      -->

        <!--        Texte HomePage      -->
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            {% for entreprise in entreprises %}
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 DivHomePage">
                    <h3 class="MotHomePage" > {{ entreprise.nom }} ? </h3>
                    <div class="text{{ loop.index }}">
                        <div class="DescriptionHomePage" >
                                {{ entreprise.description[:250] }} <p class="LirePlusHomePage">Lire plus...</p>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="{{loop.index}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <div class="modalTextHomepage"><span aria-hidden="true">Â <i class="fa fa-arrow-left" aria-hidden="true"></i>Retour</span></div>
                        </button>
                        <div class="modal-dialog" role="document">

                            <div class="modal-content">
                                <div class="modal-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <h3 class="Titre LigneTitre"><span class="LigneSpan" >{{ entreprise.nom }}</span></h3>
                                </div>
                                <div class="modal-body TextModalHomepage">
                                    {{ entreprise.description }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- !Modal! -->
                </div>

            {% block javascripts %}
            {% for entreprise in entreprises %}
                <script type="text/javascript">
                    $(document).ready(function(){
                        $(".text{{ loop.index }}").click(function(){
                            $("#{{ loop.index }}").modal('show');
                        });
                    });
                </script>
            {% endfor %}
                {% endblock %}
            {% endfor %}
        </div>
        <!--        !Texte HomePage!      -->
    </div>

