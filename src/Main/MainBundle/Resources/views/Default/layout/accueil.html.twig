{% extends "::layout/layout.html.twig" %}
{% block body %}




<div id="main">
    <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <h2 id="Bvn">Bienvenue !</h2>
    </div>

    <div id="myCarousel" class="carousel slide col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-8 col-sm-8 col-md-8 col-lg-8" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner ">
            <div class="item active">
                <img class="ImageCarousel" src="{{  asset(active.media.path) }}" alt="Los Angeles">
            </div>
            {% for image in images %}
            <div class="item">
                <img class="ImageCarousel" src="{{ asset(image.media.path) }}" alt="Los Angeles">
            </div>
                {% endfor %}
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    {% for entreprise in entreprises %}
    <div id="DivHomePage" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div  id="NomHomePage" class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <h3 class="bloc"> {{ entreprise.nom }} ? </h3>
        </div>

        <p class="bloc col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-5 col-sm-5 col-md-5 col-lg-5" id="DescriptionHomePage">
            {{ entreprise.description }}
    </div>
    {% endfor %}
    <div style="position: fixed;" class=" hidden-xs col-sm-2 col-md-2 col-lg-2 col-xs-offset-10 col-sm-offset-10 col-lg-offset-10 col-lg-offset-10 Panier">
        <button id="BoutonBar" class="col-xs-5 col-sm-5 col-md-5 col-lg-5"></button> <h3 class="col-xs-offset-1 col-sm-offset-1 col-lg-offset-1 col-lg-offset-1 col-xs-5 col-sm-5 col-md-5 col-lg-5 MotsBar">News 1</h3>

    </div>
</div>

{% endblock %}