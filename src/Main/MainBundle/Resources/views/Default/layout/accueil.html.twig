{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div id="main">
        <!--        Caroussel      -->
        <div id="myCarousel" class="carousel slide col-xs-12 col-sm-12 col-md-12 col-lg-12 test7" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                {% for image in images %}
                    <li data-target="#myCarousel" data-slide-to="{{ image.ordre }}"></li>
                {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner centrageD">
                <div class="item active" style="width: 100%;">
                    <img class="ImageCarousel d-block img-fluid" src="{{  asset(active.media.path) }}" alt="Los Angeles">
                    <div class="carousel-caption" style="margin-bottom: 10%;"><p class="HelpUs">Aidez ces étudiants</p></div>
                    <div class="carousel-caption DivDonate"><p class="Donate">Donate</p></div>
                </div>
                {% for image in images %}
                    <div class="item" style="width: 100%;">
                        <img class="ImageCarousel d-block img-fluid" src="{{ asset(image.media.path) }}" alt="Los Angeles">
                        <div class="carousel-caption" style="margin-bottom: 10%;"><p class="HelpUs">Aidez ces étudiants</p></div>
                        <div class="carousel-caption DivDonate"><p class="Donate">Donate</p></div>
                    </div>
                {% endfor %}
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!--        !Caroussel!      -->

        <!--        Barre bienvenue      -->
        <div id="DivBvn" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2 id="Bvn">Bienvenue !</h2>
            <div class="TextIntro">Daech est à Mossoul depuis 3 ans ! Des milliers de
                personnes ont été déplacées ou on émigré.</br>Cette Situation nous interpelle... </br>Et vous ?</div>
        </div>
        <!--        !Barre bienvenue!      -->

        <!--        Texte HomePage      -->
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div style="display: flex; justify-content: space-around;">
                <div class="All" id="1">
                    <div id="Qui" class="bjr" style="position: absolute; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                        <i class="fa fa-user-circle-o fa-5x" aria-hidden="true"></i>
                        <p style="margin-top: 10%; font-size: xx-large;">Qui ?</p>
                    </div>
                    <div class="bye" style="">Aurevoir</div>
                </div>

                <div class="All" id="2">
                    <div id="Ou" class="bjr" style="position: absolute; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                        <i class="fa fa-map-marker fa-5x" aria-hidden="true"></i>
                        <p style="margin-top: 10%; font-size: xx-large;">Où ?</p>
                    </div>
                    <div class="bye" style="">Aurevoir</div>
                </div>

                <div class="All">
                    <div class="bjr" style="position: absolute; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                        <i class="fa fa-question-circle fa-5x" aria-hidden="true"></i>
                        <p style="margin-top: 10%; font-size: xx-large;">Pourquoi ?</p>
                    </div>
                    <div class="bye" style="">Aurevoir</div>
                </div>

                <div class="All">
                    <div class="bjr" style="position: absolute; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                        <i class="fa fa-users fa-5x" aria-hidden="true"></i>
                        <p style="margin-top: 10%; font-size: xx-large;">Comment ?</p>
                    </div>
                    <div class="bye" style="">Aurevoir</div>
                </div>
            </div>




            {% for entreprise in entreprises %}
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 DivHomePage">
                    <h3 class="MotHomePage" > {{ entreprise.nom }} ? </h3>
                    <div class="text{{ loop.index }}">
                        <div class="DescriptionHomePage" >
                                {{ entreprise.description[:250] }} <p class="LirePlusHomePage">Lire plus...</p>
                        </div>
                    </div>

                    {#<!-- Modal -->                                                          aria-labelledby="exampleModalLabel"#}
                    <div class="modal fade" id="{{loop.index}}" tabindex="-1" role="dialog" aria-hidden="true" >
                        <button type="button" class="close modalTextHomepage" data-dismiss="modal" aria-label="Close">
                             <span class="Retour" aria-hidden="true"> <i class="fa fa-arrow-left" aria-hidden="true"></i>Retour</span>
                        </button>
                        <div class="modal-dialog" role="document">

                            <div class="modal-content">
                                <div class="modal-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <h3 class="Titre LigneTitre"><span class="LigneSpan" >{{ entreprise.nom }}</span></h3>
                                </div>
                                <div class="modal-body TextModalHomepage">
                                    {{ entreprise.description }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- !Modal! -->
                </div>

            {% block javascripts %}
            {% for entreprise in entreprises %}
                <script type="text/javascript">
                    $(document).ready(function(){
                        $(".text{{ loop.index }}").click(function(){
                            $("#{{ loop.index }}").modal('show');
                        });
                    });
                </script>

                <script>
                    $('#1').hover(mouseOver, mouseOut);
                    $('#2').hover(mouseOver2, mouseOut2);

                    function mouseOver()
                    {
                        $("#Qui").slideUp("slow");
                        $(this).toggleClass("enroule"); return false;
                    }
                    function mouseOut()
                    {
                        $("#Qui").slideDown("slow");
                        $(this).toggleClass("enroule"); return false;
                    }

                    function mouseOver2()
                    {
                        $("#Ou").slideUp("slow");
                        $(this).toggleClass("enroule"); return false;
                    }
                    function mouseOut2()
                    {
                        $("#Ou").slideDown("slow");
                        $(this).toggleClass("enroule"); return false;
                    }
                </script>
            {% endfor %}
                {% endblock %}
            {% endfor %}
        </div>
        <!--        !Texte HomePage!      -->
    </div>

