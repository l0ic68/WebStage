{% extends "::layout/layout.html.twig" %}
{% block body %}

<div id="main">
    <div id="myCarousel" class="carousel slide col-xs-12 col-sm-12 col-md-12 col-lg-12 test7" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            {% for image in images %}
                <li data-target="#myCarousel" data-slide-to="{{ image.ordre }}"></li>
            {% endfor %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner centrageD">
            <div class="item active" style="width: 100%;">
                <img class="ImageCarousel d-block img-fluid" src="{{  asset(active.media.path) }}" alt="Los Angeles">
            </div>
            {% for image in images %}
                <div class="item" style="width: 100%;">
                    <img class="ImageCarousel d-block img-fluid" src="{{ asset(image.media.path) }}" alt="Los Angeles">

                </div>
            {% endfor %}
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="DivBvn" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0px">
        <h2 id="Bvn">Bienvenue !</h2>
    </div>
    <div style="clear: both;"></div>
    <div id="TexteHomePage" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {% for entreprise in entreprises %}
            <!-- Modal -->
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 DivHomePage">
                <h3 class="MotHomePage" > {{ entreprise.nom }} ? </h3>
                <div class="DescriptionHomePage" >
                    {{ entreprise.description[:250] }} </br>read more...
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal fade" id="{{entreprise.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <img src="{{ asset( entreprise.media.path ) }}" class="imageAccueil">
                            </div>
                            <div class="modal-header col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <h5 class="MotHomePage">{{ entreprise.nom }}</h5>
                            </div>

                            <div class="DescriptionHomePage">
                                {{ entreprise.description }} </br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            $(".DescriptionHomePage").click(function(){
                $("#myModal").modal('show');
            });
        });
    </script>
{% endblock %}

