        <div class="DivCarte col-xs-12 hidden-sm hidden-md hidden-lg">
            <h3 style="font-size: xx-large; margin-left: 5%; margin-top: 5%;">La carte de l'irak</h3>
            <div class="col-xs-12 DivImgCarte">
                <img class="imgCarte" src="{{ asset("img/irakLast.png") }}">
            </div>
            <div class="col-xs-12 DivTextPierre">
                <div id="text-carousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li  data-target="#text-carousel" data-slide-to="0" class="active IndicateurPierreCaroussel"></li>
                        <li class="IndicateurPierreCaroussel" data-target="#text-carousel" data-slide-to="1"></li>
                        <li class="IndicateurPierreCaroussel" data-target="#text-carousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
