{% extends "::layout/layout.html.twig" %}

{% block body %}
    <h1>Entreprises list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Nom</th>
                <th>Page</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for description in descriptions %}
            <tr>
                <td><a href="{{ path('admin_description_show', { 'id': description.id }) }}">{{ description.id }}</a></td>
                <td>{{ description.description }}</td>
                <td>{{ description.nom }}</td>
                <td>{{ description.page }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_description_show', { 'id': description.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_description_edit', { 'id': description.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_description_new') }}">Create a new description</a>
        </li>
    </ul>
{% endblock %}
