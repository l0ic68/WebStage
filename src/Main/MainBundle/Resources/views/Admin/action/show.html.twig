{% extends "::layout/layout.html.twig" %}

{% block body %}
    <h1>Action</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ action.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ action.description }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{% if action.datedebut %}{{ action.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{% if action.datefin %}{{ action.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cout</th>
                <td>{{ action.cout }}</td>
            </tr>
            <tr>
                <th>Recolte</th>
                <td>{{ action.recolte }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ action.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_action_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_action_edit', { 'id': action.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
