{% extends "::adminLayout/layout.html.twig" %}
{% block body %}
    <div class="pane-content">
        <div style="display:block; width:100%; padding:200px 0 0; margin:0 auto; font-family:Arial; font-size:0.8rem; color:#333333; background-image:url({{ asset(don.media.path) }}); background-repeat:no-repeat; background-position:50% 0; box-sizing:border-box;">
            <div style="width:100%; margin:0; padding:0; box-sizing:border-box;">
                <div style="width:70%; min-width:700px; margin:0 auto; padding:13px 0; background-image:url('https://www.unicef.fr/sites/default/files/whitebg.png'); background-repeat:no-repeat; background-position:50% 0; border-top-left-radius:7px; border-top-right-radius:7px; box-sizing:border-box;">&nbsp;
                </div>
                <div style=" font-size: medium; width:70%; min-width:700px; margin:0 auto; padding-top:20px; padding-bottom:20px; background-color:#ffffff; box-sizing:border-box;">
                    {{ form_start(form1) }}
                    <h2 style="text-align: center; font-size: 38px;">{{ form_widget(form1.nom) }}</h2>
                    <section id="Payment" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                    {{ form_widget(form1.media) }}
                        {{ form_widget(form1._token) }}
                    {{ form_widget(form1.submit) }}
                        {{ form_start(form2) }}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 4%; display: flex; align-items: center;">
                            <div class="DivImageDon col-xs-6 col-sm-4 col-md-2 col-lg-offset-2 col-lg-3 " style="margin-bottom: 1%;">
                                <p class="NomDon">{{ form_widget(form2.nom) }}</p>
                                <i class="fa fa-university fa-5x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                <p style="font-size: medium; color: #333; font-family: Verdana;"> {{ form_widget(form2.description) }}</p>
                            </div>
                            {{ form_widget(form2._token) }}
                            {{ form_widget(form2.submit) }}
                        </div>
                        {{ form_start(form3) }}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 4%; display: flex; align-items: center;">
                            <div class="DivImageDon col-xs-6 col-sm-4 col-md-2 col-lg-offset-2 col-lg-3 " style="margin-bottom: 1%;">
                                <p class="NomDon">{{ form_widget(form3.nom) }}</p>
                                {{ form_widget(form3._token) }}
                                <i class="fa fa-credit-card-alt fa-5x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                <p style="font-size: medium; color: #333; font-family: Verdana;">{{ form_widget(form3.description) }}</p>
                            </div>
                            {{ form_widget(form3.submit) }}
                        </div>
                        {{ form_start(form4) }}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 4%; display: flex; align-items: center;">
                            <div class="DivImageDon col-xs-6 col-sm-4 col-md-2 col-lg-offset-2 col-lg-3 " style="margin-bottom: 1%;">
                                <p class="NomDon">{{ form_widget(form4.nom) }}</p>
                                {{ form_widget(form4._token) }}
                                <i class="fa fa-list-alt fa-5x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                <p style="font-size: medium; color: #333; font-family: Verdana;">{{ form_widget(form4.description) }}</p>
                            </div>
                        </div>
                        {{ form_widget(form4.submit) }}

                    </section>
                    {#<div>#}
                        {#<p style="text-align: center; font-size: x-large;">{{ don.description }}</p>#}
                    {#</div>#}
                    {{ form_end(form4) }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}