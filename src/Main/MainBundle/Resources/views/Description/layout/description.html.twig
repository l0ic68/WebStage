                    <li  data-target="#text-carousel" data-slide-to="0" class="active IndicateurPierreCaroussel"></li>
                    <li class="IndicateurPierreCaroussel" data-target="#text-carousel" data-slide-to="1"></li>
                    <li class="IndicateurPierreCaroussel" data-target="#text-carousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="row" style="padding-left: 5%; padding-right: 5%; height: 200px;">
                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="carousel-content">
                                <div>
                                    <p>{{ irak1.description }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="carousel-content">
                                <div>
                                    <p>{{ irak2.description }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="carousel-content">
                                <div>
                                    <p>{{ irak3.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>

    {% block javascripts %}
                <script type="text/javascript">
                    $(document).ready(function(){
                        $(".text1").click(function(){
                            $("#1").modal('show');
                        });
                        $(".text2").click(function(){
                            $("#2").modal('show');
                        });
                        $(".text3").click(function(){
                            $("#3").modal('show');
                        });
                    });
                </script>
    {% endblock %}
{% endblock %}
