{% extends "::layout/layout.html.twig" %}
{% block body %}
    <div id="DivTitreMembres" class="col-lg-12">
        <h2 id="TitreMembres" class="LigneTitre"><span class="LigneSpan">Membres de l'association</span></h2>
    </div>
{% set t = 0 %}
    {% for membre in membres %}
        {%  if t == 0 %}
            <section  class="Membres col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <figure class="col-xs-2 col-sm-2 col-md-2 col-lg-2 DescriptionMembre">
                    <img class="ImgMembres" src="{{ asset(membre.media.path) }}" >
                    <figcaption id="DescriptionPhotoMembres">
                        <p>{{ membre.nom }} {{ membre.prenom }}</p>
                    </figcaption>
                </figure>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-7">
                    {{ membre.description }}
                </div>
            </section>
            {% set t = 1 %}
        {% else %}
            <section class="Membres2 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-7 DescriptionMembre2">
                    {{ membre.description }}
                </div>
                <figure class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    <img class="ImgMembres" src="{{ asset(membre.media.path) }}" >
                    <figcaption id="DescriptionPhotoMembres">
                        <p>{{ membre.nom }} {{ membre.prenom }}</p>
                    </figcaption>
                </figure>
            </section>
            {% set t = 0 %}
        {% endif %}
    {% endfor %}
{% endblock %}





