{% extends "::layout/layout.html.twig" %}
{% block body %}
    {% for lieu in lieux %}
        <div class="DivTitre container white col-xs-12 col-sm-12 col-md-12 col-lg-12 padder-t2">
            <h2 class="Titre LigneTitre"><span class="LigneSpan">{{ lieu.nom }}</span></h2>
        </div>

        <section class="col-xs-12 col-sm-12 col-md-12 col-lg-12 IrakLieu">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 Description">
                <p>{{ lieu.description }}</p>
            </div>
            <img class="col-xs-5 col-sm-5 col-md-5 col-lg-6 ImgLieu" src="{{ asset(lieu.media.path) }}">
        </section>
    {% endfor %}
{% endblock %}