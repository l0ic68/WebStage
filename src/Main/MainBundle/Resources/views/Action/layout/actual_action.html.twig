{% extends "::layout/layout.html.twig" %}
{% block body %}
    <div class="container white col-lg-12 padder-t2 DivTitre">
        <h2 class="LigneTitre Titre"><span class="LigneSpan">Action en cours</span></h2>
    </div>

    {% for action in actions %}
        <div class="container white col-lg-12 padder-t2 DivTitre">
            <h2 class="LigneTitre Titre"><span class="LigneSpan">Action en cours</span></h2>
        </div>
        <p>{{ action.nom }}</p>
        <p>{{ action.description }}</p>
        <p>{{ action.dateDebut| date() }}</p>
        <p>{{ action.dateFin| date() }}</p>
        <p>{{ action.cout }}</p>
        <p>{{ action.recolte }}</p>
        <p>{{ action.type }}</p>
    {% endfor %}


{% endblock %}