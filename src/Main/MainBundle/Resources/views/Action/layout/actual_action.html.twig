{% extends "::layout/layout.html.twig" %}
{% block body %}

    <div class="DivTopAction col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="DivimgbackAction brightness col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div class="DivGaucheImgBack col-xs-12 col-sm-8 col-md-7 col-lg-8">
                <div class="TitreActionPrincipal col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <p class="TitreBack parallax-titleAction text-left" style="font-size: xx-large; padding-bottom: 1%;">{{ description.nom }}</p>
                </div>

                <div class="DescriptionActionPrincipal col-xs-12 col-sm-12 col-md-12 col-lg-12">
                  {{ description.description|raw }}
                    <div style="height: 30px; width: 50%"></div>
                </div>
            </div>

            <div class="DivDroiteImgBack hidden-xs col-sm-4 col-md-5 col-lg-4">
                <div class="NombreEtudiant col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2 style="text-align: left">{{ description2.nom }}</h2>
                    {{ description2.description|raw }}
                </div>
            </div>

            {#<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">lol</div>#}
            <div class="DivBoutonImgBack col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-11 col-sm-8 col-md-8 col-lg-6">
                <a href="{{ path('don') }}"><div class="DonatePastPrincipal hidden-xs col-sm-5 col-md-4 col-lg-3">Faire un Don</div></a>
            </div>

        </div>

    </div>
    <div style="height: 450px"></div>

    <div class="AllAction col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-12 col-sm-10 col-md-10 col-lg-10">
    {% for action in actions %}
        <div class="DivOneAction col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <div class="OneAction col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <img class ="pastActionImg" src="{{ asset(action.picture.path) }}" alt="Image Projet En Cours">
                <h4>{{ action.nom[:50] }}</h4>
                <p class="DescriptionActionPast">{{ action.description[:130]|raw }}...</p>
                <p class="DivCout"><span class="CoutAction">{{ action.recolte }}</span>€ récolter pour un coût de <span class="CoutAction">{{ action.cout }}</span>€</p>
                <p class="DatePast">{{ action.dateFin| date('d/m/Y') }}    -    {{ action.dateDebut| date('d/m/Y') }}</p>
                <div class="DonatePast text{{ action.id }}">Faire un Don</div>
            </div>
        </div>
        <div class="modal fade" id="{{ action.id }}" tabindex="-1" role="dialog" aria-hidden="true" >
            <button type="button" class="close modalTextHomepage" data-dismiss="modal" aria-label="Close">
                <span class="Retour" aria-hidden="true"> <i class="fa fa-arrow-left" aria-hidden="true"></i>Retour</span>
            </button>

            <div class="modal-dialog ModalAction " role="document">
                <div class="ImageActionModal hidden-xs">
                    <img class="ImageHautActionModal" src="{{ asset(action.picture.path) }}" alt="Img Projet en cours">
                </div>
                <div class="modal-content">
                    <div class="modal-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h3 class="Titre TitreModal"><span>{{ action.nom}}</span></h3>
                    </div>
                    <div class="modal-body TextModalHomepage">
                        {#<div class="DateActionModal">#}
                        {#Du : <span style="text-decoration: underline;">{{ action.dateDebut| date('d/m/Y') }}</span>   Au : <span style="text-decoration: underline;">{{ action.dateFin| date('d/m/Y') }}</span>#}
                        {#</div>#}
                        <div class="APropos col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <h2 class="parallax-titleModalActionCours text-left titreDescriptionModal" style="">Description du projet :</h2>
                        </div>
                        <div>
                            <p style="text-align: left; margin-left: 5%; margin-right: 5%;">{{ action.description|raw }}</p>
                        </div>
                        <div class="CoutActionModal">
                            <span>Coût de l'action : {{ action.cout }} €</span>
                            {#<span>Argent récolté : {{ action.recolte }}</span>#}
                        </div>
                    </div>

                    <!--        Faire un Don      -->
                    {#<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bandeauHomepage">#}
                        {#<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 bandeauText" >#}
                            {#<h2>Vous souhaitez soutenir le projet ?</h2>#}
                        {#</div>#}
                        {#<div class="bandeauDonate">#}
                            {#<p style="margin: 0px">Faire un Don</p>#}
                        {#</div>#}
                    {#</div>#}

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bandeauHomepage">
                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 bandeauText" >
                            <h2>Vous souhaitez soutenir le projet ?</h2>
                        </div>
                        <a href="{{path('don') }}" style="color: black;">
                            <div class="bandeauDonate">
                                <p class="BoutonDon">Faire un Don</p>
                            </div>
                        </a>
                    </div>
                    <!--        !Faire une Don!      -->

                    <div class="APropos col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h2 class="parallax-titleModalActionCours2 text-left" style="padding-bottom: 10px; padding-left: 11%; margin: 0px; color: #333;">Le projet en image :</h2>
                    </div>
                    <div class="row CarouselModalAction">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div id="myCarousel" class="carousel slide col-xs-12 col-sm-12 col-md-12 col-lg-12 test7" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    {% if not action.media.empty %}
                                        {% for media in action.media %}
                                            <li data-target="#myCarousel" data-slide-to="{{ action.id }}"></li>
                                        {% endfor %}
                                    {% endif %}
                                </ol>

                                <!-- Wrapper for slides -->

                                <div class="carousel-inner centrageD">
                                    <div class="item active" style="width: 100%;">
                                        <img class="ImageActionCarouselModal d-block img-fluid" src="{{ asset(action.picture.path) }}" alt="Image du projet">
                                    </div>
                                    {% if not action.media.empty %}
                                        {% for media in action.media %}
                                            <div class="item" style="width: 100%;">
                                                <img  class="ImageActionCarouselModal d-block img-fluid" src="{{ asset(media.path) }}" alt="Carousel du projet">
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: none;">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: none;">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
        <a href="{{ path('new_past_action') }}"></a>
    </div>
    {% block javascripts %}
        {% for action in actions %}
            <script type="text/javascript">
                $(document).ready(function(){
                    $(".text{{ action.id }}").click(function(){
                        $("#{{ action.id }}").modal('show');
                    });
                });
            </script>
        {% endfor %}
        <script type="text/javascript">
            {% if id is defined %}
            {
                $(document).ready(function(){
                    $("#{{ id }}").modal('show');
                });
            }
            {% endif %}
        </script>
    {% endblock %}

{% endblock %}