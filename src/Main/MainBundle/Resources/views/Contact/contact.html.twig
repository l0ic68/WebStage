{% extends "::layout/layout.html.twig" %}
{% block body %}

    <!-- Contact -->
    {#<div class="container white col-lg-12 padder-t2 DivTitre">#}
        {#<h2 class="LigneTitre Titre"><span class="LigneSpan">Contact</span></h2>#}
    {#</div>#}
    <div class="white DivContact" style="margin-bottom: 2%;">
        <div class="APropos col-xs-4 col-sm-offset-1 col-sm-4" style="margin-top: 5%; margin-bottom: 0px; padding-left: 0px;">
            <h2 class="" style="padding-bottom:10px; margin: 0px; font-size: xx-large; color: #009de0;">Contact :</h2>
        </div>

        <form class="form-horizontal" action="{{ path('contact') }}" method="post"  {{ form_enctype(form) }} id="contact_form">
            {{ form_start(form) }}

            <div class="row padder-t padder-b container white col-lg-12">

                <div class="col-sm-offset-1 col-sm-7" style=" border-right: 2px black solid; padding-top: 2%">
                    <div class="col-xs-12">
                        <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-3">
                            <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.lastname) }}</p></label>
                        </div>
                        <div class="col-xs-6 col-sm-6  inputGroupContainer">
                            {{ form_widget(form.lastname) }}
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-3">
                            <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.email) }}</p></label>
                        </div>
                        <div class="col-xs-6 col-sm-6 inputGroupContainer">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-3">
                            <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.phone) }}</p></label>
                        </div>
                        <div class="col-xs-6 col-sm-6 inputGroupContainer">
                            {{ form_widget(form.phone) }}
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-3">
                            <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.message) }}</p></label>
                        </div>
                        <div class="col-xs-6 col-sm-6 inputGroupContainer">
                            <div id="MessageContact" class="input-group">
                                {{ form_widget(form.message) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12" style="margin-top: 5%;">
                        <div class="col-xs-6 col-sm-offset-1 col-sm-6">
                            {{ form_widget(form.Send) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>


                <div class="col-sm-4" style="padding-top: 2%">
                    <div class="col-sm-12" style="margin-bottom: 2%">
                        <h4>Contactez nous directement:</h4>
                    </div>

                    <div class="col-sm-12">
                      <p class="col-sm-5">Mail :</p>
                      <p class="col-sm-7">aporteurlumiere@gmail.com</p>
                    </div>

                    <div class="col-sm-12">
                        <p class="col-sm-5">Adresse : </p>
                        <p class="col-sm-7">12, rue des cerisiers - 67117 FURDENHEIM - FRANCE</p>
                    </div>
                </div>
            </div>
        </form>

    </div>

{% endblock %}

