                    <!-- Text input Last name -->
                    <div class="form-group ContactDiv">
                        <div class="row">
                            <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-2 col-md-2 col-lg-2" style="padding: 3px;">
                                <label class="control-label pull-left" ><p style="font-size: x-large;">{{ form_label(form.lastname) }}</p></label>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <!-- twig: WIDGET -->
                                    {{ form_widget(form.lastname) }}
                                </div>
                            </div>
                            <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.firstname) }}</p></label>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <!-- twig: WIDGET -->
                                    {{ form_widget(form.firstname) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Text input First name -->
