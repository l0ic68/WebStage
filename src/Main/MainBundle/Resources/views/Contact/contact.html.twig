                                    {#</div>#}
                                {#</div>#}
                            {#</div>#}
                            <!-- Text area -->
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                        <label class="control-label pull-left"><p style="font-size: x-large;">{{ form_label(form.message) }}</p></label>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-4 col-lg-5 inputGroupContainer">
                                        <div id="MessageContact" class="input-group">
                                            {{ form_widget(form.message) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 5%">
                                <div class="row">
                                    <label class="col-xs-4 col-sm-4 col-md-4 col-lg-4 control-label"></label>
                                    <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </fieldset>
